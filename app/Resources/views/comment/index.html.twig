{% extends 'base.html.twig' %}

{% block content %}
    <h1>Comments list</h1>
    <hr>
    <div class="table-responsive">
        <table class="table table-stripped table-condensed">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Publication</th>
                    <th>Pseudo</th>
                    <th>Message</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>
                        <a href="{{ path('comment_show', { 'id': comment.id }) }}">
                            {{ comment.id }}
                        </a>
                    </td>
                    <td>{{ comment.publication }}</td>
                    <td>{{ comment.pseudo }}</td>
                    <td>{{ comment.message }}</td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                <a href="{{ path('comment_show', { 'id': comment.id }) }}"
                                    class="btn btn-xs btn-primary">
                                    Show
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('comment_edit', { 'id': comment.id }) }}"
                                    class="btn btn-xs btn-warning">
                                    Edit
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <hr>
    <ul class="list-inline">
        <li>
            <a href="{{ path('comment_new') }}" class="btn btn-sm btn-success">
                Create a new comment
            </a>
        </li>
    </ul>
{% endblock %}
