{% extends 'base.html.twig' %}

{% block content %}
    <h1>Publications list</h1>
    <hr>
    <div class="table-responsive">
        <table class="table table-stripped table-condensed">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Description</th>
                    <th>Content</th>
                    <th>Publishedat</th>
                    <th>Validated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for publication in publications %}
                <tr>
                    <td>
                        <a href="{{ path('publication_show', { 'id': publication.id }) }}">
                            {{ publication.id }}
                        </a>
                    </td>
                    <td>{{ publication.title }}</td>
                    <td>{{ publication.author }}</td>
                    <td>{{ publication.description }}</td>
                    <td>{{ publication.content }}</td>
                    <td>{{ publication.publishedAt | date }}</td>
                    <td>{% if publication.validated %}Yes{% else %}No{% endif %}</td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                <a href="{{ path('publication_show', { 'id': publication.id }) }}"
                                    class="btn btn-xs btn-primary">
                                    Show
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('publication_edit', { 'id': publication.id }) }}"
                                    class="btn btn-xs btn-warning">
                                    Edit
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <hr>
    <ul class="list-inline">
        <li>
            <a href="{{ path('publication_new') }}" class="btn btn-sm btn-success">
                Create a new publication
            </a>
        </li>
    </ul>
{% endblock %}
